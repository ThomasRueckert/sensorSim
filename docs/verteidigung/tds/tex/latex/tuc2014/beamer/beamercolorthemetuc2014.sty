\definecolor{tuccolor@natwi@rgb}{RGB}{112,112,111}		% Blaugrau
\definecolor{tuccolor@ma@rgb}{RGB}{161,11,112}			% Signalviolett
\definecolor{tuccolor@mb@rgb}{RGB}{18,51,117}			% Verkehrsblau
\definecolor{tuccolor@etit@rgb}{RGB}{230,51,18}			% Leuchtorange
\definecolor{tuccolor@if@rgb}{RGB}{119,154,43}			% Maigrün
\definecolor{tuccolor@wiwi@rgb}{RGB}{157,7,54}			% Himbeerrot
\definecolor{tuccolor@phil@rgb}{RGB}{242,140,0}			% Dahliengelb
\definecolor{tuccolor@hsw@rgb}{RGB}{0,139,210}			% Himmelblau
\definecolor{tuccolor@gold@rgb}{RGB}{141,104,49}		% Perlgold
\definecolor{tuccolor@silver@rgb}{RGB}{157,156,156}		% Weißaluminium
