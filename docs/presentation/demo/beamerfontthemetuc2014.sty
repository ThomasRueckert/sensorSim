\newif\iftuc@roboto\tuc@robototrue
\newif\iftuc@robotoheader\tuc@robotoheadertrue

\DeclareOptionBeamer{latexfonts}{\tuc@robotofalse\tuc@robotoheaderfalse}
\DeclareOptionBeamer{latexfontsbody}{\tuc@robotofalse}
\DeclareOptionBeamer{scaled}{\PassOptionsToPackage{\CurrentOption}{tucroboto}}
\ProcessOptionsBeamer

\RequirePackage{tucroboto}

% Standardschrift auf Roboto umstellen.
\iftuc@roboto
\renewcommand{\rmdefault}{robs}
\renewcommand{\sfdefault}{robc}
\setbeamerfont{normal text}{family=\robcfamily}
\fi

% Kopf- und Fußzeilenschrift auf Roboto umstellen.
\iftuc@robotoheader
\setbeamerfont{headline}{family=\robcfamily}
\setbeamerfont{footline}{family=\robcfamily}
\setbeamerfont{tiny structure}{family=\robcfamily}
\fi
